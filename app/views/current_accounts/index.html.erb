<p id="notice"><%= notice %></p>

<h1>Listing Current Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Cash account</th>
      <th>Cost center</th>
      <th>Tipo</th>
      <th>Data</th>
      <th>Valor</th>
      <th>Historico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_accounts.each do |current_account| %>
      <tr>
        <td><%= current_account.cash_account.name %></td>
        <td><%= current_account.cost_center.name %></td>
        <td><%= current_account.credito_debito %></td>
        <td><%= date_br(current_account.data) %></td>
        <td><%= current_account.valor %></td>
        <td><%= current_account.historico %></td>
        <td><%= link_to 'Show', current_account %></td>
        <td><%= link_to 'Edit', edit_current_account_path(current_account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

