<div class="panel panel-default">
  <div class="panel-heading">Listing Current Accounts</div>
  <div class="panel-body">
    <%= link_to 'New Current account', new_current_account_path , class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Cash account</th>
            <th>Cost center</th>
            <th>Tipo</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Historico</th>
            <th colspan="3">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @current_accounts.each do |current_account| %>
            <tr>
              <td><%= current_account.cash_account.name %></td>
              <td><%= current_account.cost_center.name %></td>
              <td><%= current_account.credito_debito %></td>
              <td><%= date_br(current_account.data) %></td>
              <td><%= current_account.valor %></td>
              <td><%= current_account.historico %></td>
              <td><%= link_to 'Show', current_account, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_current_account_path(current_account), class: "btn btn-primary btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

