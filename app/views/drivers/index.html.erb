<div class="panel panel-default">
  <div class="panel-heading">Listing Drivers</div>
  <div class="panel-body">
    <%= link_to  'New Driver', new_driver_path , class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Vtr</th>
            <th>Name</th>
            <th>Valor</th>
            <th colspan="3">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @drivers.each do |driver| %>
            <tr>
              <td><%= driver.vtr %></td>
              <td><%= driver.name %></td>
              <td><%= driver.valor %></td>
              <td><%= link_to 'Show', driver, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_driver_path(driver), class: "btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

