<div class="panel panel-default">
  <div class="panel-heading">Listing Banks</div>
  <div class="panel-body">
    <%= link_to 'New Bank', new_bank_path , class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Number</th>
            <th>Name</th>
            <th colspan="3">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @banks.each do |bank| %>
            <tr>
              <td><%= bank.number %></td>
              <td><%= bank.name %></td>
              <td><%= link_to 'Show', bank %></td>
              <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
              <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

