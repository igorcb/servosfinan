<div class="panel panel-default">
  <div class="panel-heading">Listing Payment Methods</div>
  <div class="panel-body">
    <%= link_to 'New Payment method', new_payment_method_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @payment_methods.each do |payment_method| %>
          <tr>
            <td><%= payment_method.name %></td>
            <td><%= link_to 'Show', payment_method, class: "btn btn-info btn-xs"  %></td>
            <td><%= link_to 'Edit', edit_payment_method_path(payment_method), class: "btn btn-primary btn-xs"  %></td>
            <td><%= link_to 'Destroy', payment_method, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs"  %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>

