<p id="notice"><%= notice %></p>

<h1>Listing Account Receivables</h1>

<table>
  <thead>
    <tr>
      <th>Type account</th>
      <th>Supplier</th>
      <th>Cost center</th>
      <th>Payment method</th>
      <th>Documento</th>
      <th>Data vencimento</th>
      <th>Valor</th>
      <th>Observacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_receivables.each do |account_receivable| %>
      <tr>
        <td><%= account_receivable.supplier.name %></td>
        <td><%= account_receivable.cost_center.name %></td>
        <td><%= account_receivable.payment_method.name %></td>
        <td><%= account_receivable.documento %></td>
        <td><%= date_br(account_receivable.data_vencimento) %></td>
        <td><%= account_receivable.valor %></td>
        <td><%= account_receivable.observacao %></td>
        <td><%= link_to 'Show', account_receivable %></td>
        <td><%= link_to 'Edit', edit_account_receivable_path(account_receivable) %></td>
        <td><%= link_to 'Destroy', account_receivable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

