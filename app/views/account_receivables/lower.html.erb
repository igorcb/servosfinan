<%#= render "data_account" %>

<%= form_tag({:controller => "account_receivables", action: :pay}, :method => "post", :name => "make_pay") do |f| %>
<fieldset>
 
  <legend></legend>

  <div class="form-group">
    <%= label_tag :cost_center, "Centro de Custo" %><br>
    <%= select_tag "lower_receivables[cost_center_id]", options_from_collection_for_select(@cost_center, "id", "name"), :prompt => "Selecione uma conta", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :cash_account_id, "Conta Corrente" %><br>
    <%= select_tag "lower_receivables[cash_account_id]", options_from_collection_for_select(@cash_accounts, "id", "name"), :prompt => "Selecione uma conta", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :payment_method_id, "Forma Recebimento" %><br>
    <%= select_tag "lower_receivables[payment_method_id]", options_from_collection_for_select(@payment_methods, "id", "name"), :prompt => "Selecione uma opção", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :data_pagamento %><br>
    <%= text_field_tag "lower_receivables[data_pagamento]", "", class: "form-control data" %>
  </div>

  <div class="form-group">
    <%= label_tag :valor_pago, "Valor Pago" %><br>
    <%= text_field_tag "lower_receivables[valor_pago]", "", value: number_to_currency(@account_receivable.saldo, unit: "", separator: ".", delimiter: ","),  class: "form-control money2" %>
  </div>

  <div class="form-group">
    <%= label_tag :juros %><br>
    <%= text_field_tag "lower_receivables[juros]", "0.00", class: "form-control money2" %>
  </div>

  <div class="form-group">
    <%= label_tag :desconto %><br>
    <%= text_field_tag "lower_receivables[desconto]", "0.00", class: "form-control money2" %>
  </div>

  <div class="form-group">
    <%= label_tag :observacao %><br>
    <%= text_area_tag "lower_receivables[observacao]", "", class: "form-control" %>
  </div>

  <hr />
	
  <div class="form-group">
  	<%= submit_tag("Efetuar Baixar", class: "btn btn-primary") %> 
    <%= link_to "Voltar", @account_receivable, class: "btn btn-default" %> 
    <%= link_to "Listar Todos", account_receivables_path, class: "btn btn-default" %> 
	</div>
	
</fieldset>


<% end %>

<%#= render "payments" %>
